<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/insomlandscape1920"
            android:scaleType = "centerCrop"
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription"/>




    </FrameLayout>





    <android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    grid:alignmentMode="alignBounds"
    grid:columnCount="2"
    android:layout_below="@id/textView"

   >

    <Button
        android:id="@+id/sleepquality"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Sleep quality"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/physicalactivity"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Physical activity"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="5dp"

        />

    <Button
        android:id="@+id/dailylight"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Daily light"

        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="5dp"

        />

    <Button
        android:id="@+id/nightlylight"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Nightly light"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="5dp"

        />


    <Button
        android:id="@+id/coffee"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Coffee"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="5dp"

        />

    <Button
        android:id="@+id/bedroom"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Bedroom"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="5dp"

        />

</android.support.v7.widget.GridLayout>

    </RelativeLayout>
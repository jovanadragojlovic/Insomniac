<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/insomlandscape1920"
            android:scaleType = "centerCrop"
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/novlog"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Learn more"
        android:textSize="20sp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="68dp"
        android:id="@+id/linija"/>

    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        android:layout_below="@+id/linija">

        <Button
            android:id="@+id/aboutinsomniac"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="Insomniac"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:background="@drawable/green"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/introduction"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="About sleep"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:background="@drawable/green"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp" />



        <Button
            android:id="@+id/learnmorechecklist"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="Improve sleep quality"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:background="@drawable/green"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/stimuluscontrol"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="Stimulus control technique"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:background="@drawable/green"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp" />


        <Button
            android:id="@+id/learnmoreworrybook"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="Worry book technique"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:background="@drawable/green"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp" />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>


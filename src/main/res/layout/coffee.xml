<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tunisija"
            android:scaleType = "centerCrop"
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription"/>




    </FrameLayout>

    <!--<ImageButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/ic_help_outline_white_24dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="6dp"-->
        <!--android:layout_marginEnd="6dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:id="@+id/cf"/>-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/novlog"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Coffee"
        android:textSize="20dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="66dp" />

    <TextView
        android:id="@+id/jebise"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="How many cups of coffee have you had today?"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kafa"
        android:layout_below="@+id/jebise"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cup"
        tools:ignore="ContentDescription"/>



    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/pokazatelj"
        android:layout_below="@+id/kafa"
        android:text="0"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/dodaj"
        android:layout_below="@+id/kafa"
        android:layout_toRightOf="@+id/pokazatelj"
        android:layout_toEndOf="@+id/pokazatelj"
        android:src="@drawable/dodaj"
        tools:ignore="ContentDescription"
        android:background="@color/transparent_white"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/oduzmi"
        android:src="@drawable/oduzmi"
        tools:ignore="ContentDescription"
        android:background="@color/transparent_white"
        android:layout_below="@+id/kafa"
        android:layout_toLeftOf="@+id/pokazatelj"
        android:layout_toStartOf="@+id/pokazatelj" />




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".improveSleep.SleepQuality"
    android:orientation="vertical">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tunisija"
            android:scaleType = "centerCrop"
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="67dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/novlog"
            tools:ignore="ContentDescription"/>

    </FrameLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_help_outline_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="10dp"
        android:id="@+id/sq"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Sleep quality"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sq"
        android:layout_alignEnd="@+id/sq" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/siva"
        android:layout_marginTop="68dp" />

    <TextView android:id="@+id/tw0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:textSize="20sp"
        android:layout_below="@id/textView"/>

    <TextView
        android:id="@+id/linija0"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/tw0"/>

    <TextView android:id="@+id/tw1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:textSize="20sp"
        android:text="How long have you slept?"
        android:layout_below="@id/tw0"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tw1"
        tools:layout_editor_absoluteY="246dp"
        tools:layout_editor_absoluteX="120dp"/>

    <TextView android:id="@+id/tw2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25sp"
        android:textSize="20sp"
        android:layout_below="@+id/seekBar"/>

    <TextView android:id="@+id/tw3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25sp"
        android:textSize="20sp"
        android:text="How did you sleep?"
        android:layout_below="@+id/tw2"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tw3"/>

    <TextView android:id="@+id/tw4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25sp"
        android:textSize="20sp"
        android:layout_below="@+id/ratingBar"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

    <Button android:id="@+id/close"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Close"
        android:layout_weight="1"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Save"
        android:layout_weight="1"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        />

    </LinearLayout>

</RelativeLayout>
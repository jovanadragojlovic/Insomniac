<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/temporary"/>

    <Button
        android:text="Insomniac"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/aboutinsomniac"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/temporary"
        />

    <Button
        android:text="About sleep"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/introduction"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:layout_below="@id/aboutinsomniac"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:text="Improve sleep quality"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/learnmorechecklist"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:layout_below="@id/introduction"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:text="Stimulus control technique"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/stimuluscontrol"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:layout_below="@+id/learnmorechecklist"
        android:layout_centerHorizontal="true"

        />


    <Button
        android:text="Worry book technique"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/learnmoreworrybook"
        android:background="@drawable/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:layout_below="@+id/stimuluscontrol"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"

        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100.0">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textColor="#ffffff"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:textColor="#ffffff"
                android:layout_marginTop="25dp"
                />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6">




            <android.support.v7.widget.GridLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:grid="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                grid:columnCount="2"
                android:layout_centerHorizontal="true"
                grid:alignmentMode="alignBounds">


                <Button
                    android:text="Sleep quality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/SleepQuality"
                    android:background="#21ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    grid:layout_columnWeight="1"
                    grid:layout_rowWeight="1"
                    />
                <Button
                    android:text="Physical activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/PhisicalActivity"
                    android:background="#21ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill"
                    grid:layout_rowWeight="1"

                    />
                <Button
                    android:text="Daily light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Dailylight"
                    android:background="#21ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill"
                    grid:layout_rowWeight="1"

                    />

                <Button
                    android:text="Nightly light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Nightlylight"
                    android:background="#21ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill"
                    grid:layout_rowWeight="1"

                    />


                <Button
                    android:text="Coffee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Coffee"
                    android:background="#21ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill"
                    grid:layout_rowWeight="1"

                    />
                <Button
                    android:text="Bedroom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Bedroom"
                    android:background="#21ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    grid:layout_columnWeight="1"
                    grid:layout_gravity="fill"
                    grid:layout_rowWeight="1"

                    />

            </android.support.v7.widget.GridLayout>


        </RelativeLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
